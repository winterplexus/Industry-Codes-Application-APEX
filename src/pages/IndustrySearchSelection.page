<apex:page id="IndustrySearchSelection" title="Industry: Search Codes By Selection" controller="IndustrySearchSelectionController" showHeader="false" sidebar="false">
  <apex:stylesheet value="{!URLFOR($Resource.wiregrass_resources, 'wiregrass.css')}"/>

  <!-- Header -->
  <div id="header_container">
    <div id="header">
      Industry Codes
    </div>
  </div>

  <!-- Content container -->
  <div id="container">
    <div id="content">
      <!-- Page messages -->
      <apex:pageMessages />

      <!-- Page form -->
      <apex:form id="searchSelectionForm">
        <!-- User input block -->
        <apex:pageBlock title="Industry Codes">
          <!-- Inline heading -->
          <apex:outputText value="Search NAICS/SIC Codes By Selection" style="font-weight: bold"></apex:outputText><p />

          <!-- User input grid -->
          <apex:panelGrid columns="2">
            <!-- Industry sector -->
            <apex:panelGroup >
              <apex:outputLabel value="Select Industry Sector:" for="industrySectorList"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup >
              <apex:selectList value="{!industrySector}" id="industrySectorList" size="1" multiselect="false" style="width:500px;" title="Select industry sector from pull-down list">
                <apex:actionSupport event="onchange" rerender="list" action="{!industrySectorSelected}"/>
                <apex:selectOptions value="{!industrySectors}"/>
              </apex:selectList>&nbsp;
              <apex:outputText value="required" style="color:red"></apex:outputText>
            </apex:panelGroup>

            <!-- Industry subsector -->
            <apex:panelGroup >
              <apex:outputLabel value="Select Industry Subsector:" for="industrySubsectorList"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup >
              <apex:selectList value="{!industrySubsector}" id="industrySubsectorList" size="1" multiselect="false" style="width:500px;" title="Select industry subsector from pull-down list">
                <apex:actionSupport event="onchange" rerender="list" action="{!industrySubsectorSelected}"/>
                <apex:selectOptions value="{!industrySubsectors}"/>
              </apex:selectList>&nbsp;
              <apex:outputText value="required" style="color:red"></apex:outputText>
            </apex:panelGroup>

            <!-- NAICS description -->
            <apex:panelGroup >
              <apex:outputLabel value="Select NAICS Description:" for="NAICSDescriptionList"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup >
              <apex:selectList value="{!NAICSCode}" id="NAICSDescriptionList" size="1" multiselect="false" style="width:500px;" title="Select NAICS description from pull-down list">
                <apex:actionSupport event="onchange" rerender="list" action="{!NAICSCodeSelected}"/>
                <apex:selectOptions value="{!NAICSDescriptions}"/>
              </apex:selectList>&nbsp;
              <apex:outputText value="required" style="color:red"></apex:outputText>
            </apex:panelGroup>

            <!-- SIC description -->
            <apex:panelGroup >
              <apex:outputLabel value="Select SIC Description:" for="SICDescriptionList"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup >
              <apex:selectList value="{!SICCode}" id="SICDescriptionList" size="1" multiselect="false" style="width:500px;" title="Select SIC description from pull-down list">
                <apex:actionSupport event="onchange" rerender="list" action="{!SICCodeSelected}"/>
                <apex:selectOptions value="{!SICDescriptions}"/>
              </apex:selectList>&nbsp;
              <apex:outputText value="required" style="color:red"></apex:outputText><p />
            </apex:panelGroup>

            <!-- Inline heading -->
            <apex:panelGroup id="oututInlineHeadingLabelGroup" rendered="{!IF(displayOutput,true,false)}">
            </apex:panelGroup>
            <apex:panelGroup id="outputInlineHeadingGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:outputText value="NAICS/SIC Codes" style="font-weight: bold"></apex:outputText><p />
            </apex:panelGroup>

            <!-- NAICS code output -->
            <apex:panelGroup id="outputNAICSCodeLabelGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:outputLabel value="NAICS Code:" for="outputNAICSCodeText"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup id="outputNAICSCodeGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:inputText value="{!NAICSCode}" id="outputNAICSCodeText" size="6" maxlength="6" disabled="true"/>
            </apex:panelGroup>

            <!-- NAICS description output -->
            <apex:panelGroup id="outputNAICSDescriptionLabelGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:outputLabel value="NAICS Description:" for="outputNAICSDescriptionText"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup id="outputNAICSDescriptionGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:inputText value="{!NAICSDescription}" id="outputNAICSDescriptionText" size="65" maxlength="65" disabled="true"/>
            </apex:panelGroup>

            <!-- SIC code output -->
            <apex:panelGroup id="outputSICCodeLabelGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:outputLabel value="SIC Code:" for="outputSICCodeText"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup id="outputSICCodeGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:inputText value="{!SICCode}" id="outputSICCodeText" size="6" maxlength="6" disabled="true"/>
            </apex:panelGroup>

            <!-- SIC description output -->
            <apex:panelGroup id="outputSICDescriptionLabelGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:outputLabel value="SIC Description:" for="outputSICDescriptionText"></apex:outputLabel>
            </apex:panelGroup>
            <apex:panelGroup id="outputSICDescriptionGroup" rendered="{!IF(displayOutput,true,false)}">
              <apex:inputText value="{!SICDescription}" id="outputSICDescriptionText" size="65" maxlength="65" disabled="true"/>
            </apex:panelGroup>
          </apex:panelGrid><p />

          <!-- Navigation buttons -->
          <apex:panelGroup >
            <apex:commandButton action="{!back}" value="Back" id="backButton" title="Back to main page"/>&nbsp;
            <apex:commandButton action="{!clear}" value="Clear" id="clearButton" title="Clear fields"/>
          </apex:panelGroup>
        </apex:pageBlock>
      </apex:form>
      <br />
      <br />
      <apex:image id="logo" value="{!URLFOR($Resource.wiregrass_resources, 'wiregrass.png')}"/>
      <p>&nbsp;&copy; Wiregrass Code Technology 2014-15.&nbsp;&nbsp;Powered By: <strong>Salesforce.com</strong></p>
    </div>
  </div>

  <!-- Footer -->
  <div id="footer_container">
    <div id="footer">
      &copy; Wiregrass Code Technology 2014-15. All rights reserved.
    </div>
  </div>
</apex:page>